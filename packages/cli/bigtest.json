{
  "app": {
    "command": "yarn test:app:start 36000",
    "url": "http://localhost:36000"
  },
  "testFiles": ["./test/fixtures/*.test.{ts,js}"],
  "launch": ["chrome.debug"],
  "drivers": {
    "chrome.debug": {
      "module": "@bigtest/webdriver",
      "options": {
        "type": "local",
        "browserName": "chrome",
        "headless": false,
        "args": ["auto-open-devtools-for-tabs"]
      }
    }
  },
  "coverage": {
    "directory": "./tmp/coverage",
    "reports": ["lcov", "html"]
  }
}

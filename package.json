{
  "name": "bigtest",
  "version": "0.0.0-monorepo",
  "description": "Tests that speed up development ",
  "repository": "git@github.com:bigtestjs/bigtest.git",
  "author": "Taras Mankovski <taras@frontside.io>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/effection",
      "packages/parcel",
      "packages/*"
    ]
  },
  "scripts": {
    "clean": "find . \\( -name node_modules -o -name dist \\) -exec rm -rf {} +",
    "prepack": "yarn workspaces run prepack",
    "test": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "develop": "cd packages/website && gatsby develop"
  },
  "volta": {
    "node": "12.11.1",
    "yarn": "1.19.1"
  },
  "_moduleAliases": {
    "@effection": "packages/server/src/effection"
  },
  "devDependencies": {
    "@frontside/eslint-config": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "eslint": "^6.6.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "typescript": "^3.7.0"
  }
}
